<div class="form-actions">
  <h1>Register Owner</h1>

</div>

<%= form_for(@owner, html: { class: 'form-horizontal' }) do |f| %>

  <% if @owner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@owner.errors.count, "error") %> prohibited this owner from being registered:</h2>

      <ul>
      <% @owner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :first_name %>
    <div>
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div>
    <%= f.label :last_name %>
    <div>
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div>
    <%= f.label :email %>
    <div>
      <%= f.text_field :email %>
    </div>
  </div>

    <div>
    <%= f.label :dog_name %>
    <div>
      <%= f.text_field :dog_name %>
    </div>
  </div>

  <div>
    <%= f.submit 'Submit' %>
    <%= link_to 'Back', owners_path %>
  </div>
<% end %>
